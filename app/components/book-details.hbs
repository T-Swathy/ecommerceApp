<div class='container'>
  <h1 class='h1 mt-5 text'>{{@model.bookName}}</h1>
  <h2 class='mt-5 bookPrice'> ${{@model.price}} </h2>
  <p>
    <span class='fa fa-star checked'></span>
    <span class='fa fa-star checked'></span>
    <span class='fa fa-star checked'></span>
    <span class='fa fa-star checked'></span>
    <span class='fa fa-star checked'></span>
  </p>
  <p class='lead mt-5'>
    By:{{@model.author}}
    | Publisher:{{@model.publisher}}
    | ReleaseDate:{{@model.releaseDate}}</p>
  <hr />

  <div class='container-fluid p-2 bg-light mt-2'>
    <h4>About the Book</h4>
  </div>
  <p class='mt-3'>{{@model.about}}</p>
  <hr class='mt-3' />
  <div class='container-fluid p-2 bg-light mt-2'>
    <h4>Book Details</h4>
  </div>
  <h5 class='mt-3'>Width:<span class='lead'>{{@model.width}}</span></h5>
  <h5 class='mt-3'>Height:<span class='lead'>{{@model.height}}</span></h5>
  <h5 class='mt-3'>No of Pages:<span class='lead'>{{@model.pages}}</span></h5>
  <h5 class='mt-3'>Language:<span class='lead'>{{@model.language}}</span></h5>
  <hr class='mt-3' />
  {{yield}}
  <div class='container-fluid p-2 bg-light mt-2'>
    <h4>User Reviews</h4>
  </div>
  <h3 class='text-center mt-3'><i
      class='fa fa-thumbs-o-up'
      style='font-size:100px;color:grey'
    ></i></h3>
  <h4 class='text-center mt-2'>2,80,000 reviews</h4>

</div>